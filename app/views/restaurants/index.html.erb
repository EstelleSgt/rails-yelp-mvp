<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/696218/pexels-photo-696218.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="container">
    <h1>Restaurants</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class='card-trip col-md-12 col-lg-5 m-3'>
        <img src="https://images.pexels.com/photos/262978/pexels-photo-262978.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" />
        <div class="card-trip-infos">
          <div>
            <h2><%= restaurant.name %></h2>
            <p><%= restaurant.address %></p>
            <p><%= restaurant.category %></p>
          </div>
          <h2 class="card-trip-review"><%= link_to 'Post a review 🖊️', new_restaurant_review_path(restaurant) %></h2>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-ghost" %>
</div>
